{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "jsx": "react-jsx",
    "jsxImportSource": "@nekosu/nui-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.tsx"]
}
